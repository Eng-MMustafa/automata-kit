# Copy these environment variables to your .env file and configure as needed

# =============================================================================
# LARAVEL AUTOMATION CONNECT CONFIGURATION
# =============================================================================

# Default automation driver
AUTOMATION_DRIVER=slack

# Webhook configuration  
AUTOMATION_WEBHOOK_PREFIX=webhooks
AUTOMATION_LOGGING_ENABLED=true
AUTOMATION_QUEUE_ENABLED=true

# Security settings
AUTOMATION_VERIFY_WEBHOOKS=true
AUTOMATION_REQUIRE_HTTPS=true
# AUTOMATION_ALLOWED_IPS=192.168.1.1,10.0.0.0/8

# Optional Filament dashboard
AUTOMATION_DASHBOARD_ENABLED=false

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_DEFAULT_CHANNEL=#general

