{
    "name": "automata-kit/automata-kit",
    "description": "Automata Kit - Laravel automation package for seamless integrations with n8n, Zapier, Make, Slack, Telegram, WhatsApp, and more",
    "keywords": [
        "laravel",
        "automation",
        "webhooks",
        "n8n",
        "zapier",
        "make",
        "slack",
        "telegram",
        "whatsapp",
        "integration",
        "workflow"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Mustafa",
            "email": "eng.mmustafa@example.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1",
        "filament/filament": "^3.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.2"
    },
    "suggest": {
        "filament/filament": "For the optional admin dashboard"
    },
    "autoload": {
        "psr-4": {
            "AutomataKit\\LaravelAutomationConnect\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AutomataKit\\LaravelAutomationConnect\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "refactor": "rector",
        "test:refactor": "rector --dry-run",
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AutomataKit\\LaravelAutomationConnect\\AutomationServiceProvider"
            ],
            "aliases": {
                "Automation": "AutomataKit\\LaravelAutomationConnect\\Facades\\Automation"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}